{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:docker": "docker build -t web-starter .",
    "e2e": "start-server-and-test e2e:start http://localhost:3000 e2e:run",
    "e2e:ci": "cypress run",
    "e2e:run": "cypress run",
    "e2e:start": "bun run ./build/server-bundle.js",
    "dev": "remix vite:dev",
    "lint": "biome ci ./**/*.{ts,js,tsx}",
    "typecheck": "tsc",
    "deploy": "flyctl deploy --remote-only",
    "deploy:staging": "flyctl deploy --remote-only --config ./fly.staging.toml"
  },
  "dependencies": {
    "@remix-run/express": "^2.12.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "@sentry/remix": "^8.31.0",
    "@starter/transactional": "workspace:*",
    "@starter/components": "workspace:*",
    "@t3-oss/env-core": "^0.11.1",
    "@vanilla-extract/css": "^1.15.5",
    "express": "^4.21.0",
    "isbot": "^4.1.0",
    "posthog-js": "^1.164.1",
    "posthog-node": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.5.0",
    "stripe": "^16.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@playwright/test": "^1.47.2",
    "@remix-run/dev": "^2.12.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.6.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vanilla-extract/vite-plugin": "^4.0.15",
    "cypress": "^13.14.2",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^2.0.8",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
