    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "@sentry/remix": "^8.31.0",
    "@starter/components": "workspace:*",
    "@starter/transactional": "workspace:*",
    "@t3-oss/env-core": "^0.11.1",
    "@vanilla-extract/css": "^1.15.5",
    "argon2": "^0.41.1",
    "drizzle-orm": "^0.33.0",
    "express": "^4.21.0",
    "isbot": "^5.0.0",
    "postgres": "^3.4.4",
    "posthog-js": "^1.164.1",
    "posthog-node": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.5.0",
    "stripe": "^16.12.0",
