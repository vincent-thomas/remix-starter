{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.*/**/*.ts",
    "**/.*/**/*.tsx"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/node", "vite/client", "@types/node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["./app/.server/*"],
      "@client/*": ["./app/.client/*"]
    },

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}
