{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build:docker": {
      "cache": false,
      "dependsOn": [
        "build"
      ]
    },
    "build": {
      "outputs": [
        "{projectRoot}/build"
      ],
      "cache": true
    },
    "deploy": {
      "cache": false,
      "dependsOn": [
        "build:docker"
      ]
    },
    "lint": {
      "cache": false
    },

    "e2e": {
      "cache": true,
      "dependsOn": ["build"]
    }
  },
  "defaultBase": "main",
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml"
    ],
    "default": [
      "sharedGlobals"
    ]
  },
  "nxCloudId": "66f325ceb88a4333f79fbb13"
}
